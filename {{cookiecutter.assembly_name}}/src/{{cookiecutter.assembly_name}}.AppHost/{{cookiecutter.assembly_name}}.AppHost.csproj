<Project Sdk="Microsoft.NET.Sdk">

  <Sdk Name="Aspire.AppHost.Sdk" Version="9.1.0" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsAspireHost>true</IsAspireHost>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\{{cookiecutter.assembly_name}}.Api\{{cookiecutter.assembly_name}}.Api.csproj" />
    <ProjectReference Include="..\{{cookiecutter.assembly_name}}.Migrations\{{cookiecutter.assembly_name}}.Migrations.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Aspire.Hosting.AppHost" Version="9.1.0" />
    {% if cookiecutter.database == "PostgreSql" %}
    <PackageReference Include="Aspire.Hosting.PostgreSql" Version="9.1.0" />
    <PackageReference Include="Npgsql" Version="9.0.3" />
    {% elif cookiecutter.database == "MongoDb" %}
    <PackageReference Include="Aspire.Hosting.MongoDB" Version="9.1.0" />
    <PackageReference Include="MongoDB.Driver" Version="3.2.0" />
    {% endif %}
    <PackageReference Include="Yarp.ReverseProxy" Version="2.3.0" />
    {% if cookiecutter.include_azure=="yes" %}
    <PackageReference Include="Aspire.Hosting.Azure.ApplicationInsights" Version="9.1.0" />
    <PackageReference Include="Aspire.Hosting.Azure.KeyVault" Version="9.1.0" />
    <PackageReference Include="Aspire.Hosting.Azure.Storage" Version="9.1.0" />
    {% endif %}

  </ItemGroup>

</Project>
