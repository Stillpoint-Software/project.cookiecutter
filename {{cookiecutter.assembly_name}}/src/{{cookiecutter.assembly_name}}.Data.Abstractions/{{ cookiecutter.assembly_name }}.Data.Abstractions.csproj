<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Configurations>Debug;Release;Debug_api;Release_api;Debug_migration;Release_migration</Configurations>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Hyperbee.Json" Version="2.0.0" />
    <PackageReference Include="Hyperbee.Pipeline" Version="1.1.5" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="90.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.0" />
    {% if cookiecutter.database == "MongoDb" %}
    <PackageReference Include="MongoDB.Bson" Version="3.0.0" />
    <PackageReference Include="MongoDB.Driver" Version="3.0.0" />
    {% endif %}
  </ItemGroup>


  <ItemGroup>
    <PackageReference Update="Microsoft.SourceLink.GitHub" Version="8.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>